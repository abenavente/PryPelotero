<div id="product_list" >
<h1>Tus Locales</h1>
<table>
<% @locals.each do |local| %>
<tr class="<%= cycle('list_line_odd', 'list_line_even') %>" >
<td>
<%= image_tag(local.image_url, :class => 'list_image') %>
</td>
<td class="list_description" >
<dl>
<dt><h3><%= local.name %><h3></dt>
<dd><%= truncate(strip_tags(local.address),
:length => 80) %></dd>
</dl>
</td>
<td class="list_actions" >
<%= link_to 'Mostrar', local %><br/>
<%= link_to 'Editar', edit_local_path(local) %><br/>
<%= link_to 'Canchitas', canchitad_path(local) %><br/>
<%= link_to 'Elimiar', local,
:confirm => 'Â¿Estas seguro?',
:method => :delete %>
</td>
</tr>
<% end %>
</table>
</div>
<br />

<%= link_to 'Nuevo Local', new_local_path %>
