
<%= simple_form_for(@canchitum) do |f| %>

    <%= f.input :name %>
    <%= f.input :local do %>
    <%= f.select :local_id , Local.where(:owner_id => current_owner.id).map { |r|  [r.name, r.id, { :owner => current_owner.id }] }, :include_blank => true %>

    <% end %>
    

    <%= f.input :max_players %>
    <%= f.input :image_url %>
    <%= f.button :submit %>

<% end %>
